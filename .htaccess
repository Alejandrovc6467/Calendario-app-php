# Habilitar RewriteEngine
RewriteEngine On

# Establecer la carpeta base
RewriteBase /

# Redirigir la ra√≠z a public/index.html
DirectoryIndex index.php public/index.html

# Proteger la carpeta data de acceso directo
<FilesMatch "datos_calendario\.json">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acceso directo a la carpeta data
RewriteRule ^data/ - [F,L]

# Permitir acceso a archivos y carpetas existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Opcional: Prevenir listado de directorios
Options -Indexes

